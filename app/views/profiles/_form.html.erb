<div class="form">

  <%= form_for @profile, html: { multipart: true } do |f| %>

    <% @profile.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>

    <%= f.label :first_name, class: "form-field" %>
    <br>
    <%= f.text_field :first_name, placeholder: "First Name", class: "form-field" %>
    <br>
    <%= f.label :last_name, class: "form-field" %>
    <br>
    <%= f.text_field :last_name, placeholder: "Last Name", class: "form-field" %>
    <br>
    <%= f.label :bio, class: "form-field" %>
    <br>
    <%= f.text_area :bio, rows: 5, placeholder: "Tell us about yourself..", class: "form-area" %>
    <br>
    <p> Upload a photo of yourself </p>
      <% if @photos %>
        <% @photos.each do |photo| %>
          <%= image_tag photo.image %>
          <%= link_to "Delete", photo_path( photo.id ), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      <% end %>
    <%= file_field_tag "images[]", type: :file, multiple: false %>
    <br>
    <%= f.submit "Create Profile" %>

  <% end %>

</div>
